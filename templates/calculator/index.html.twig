{% extends 'base.html.twig' %}

{% block title %}The Calculator (tm){% endblock %}

{% block body %}

    <div class="container">
        <div id='error_bar' class="d-none alert alert-danger"></div>
        <div class="row">
            <form>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="x" placeholder="X">
                    </div>
                    <div class="col">
                        <select class="form-control" id="operation">
                            <option value="add">+</option>
                            <option value="subtract">-</option>
                            <option value="multiply">*</option>
                            <option value="divide">/</option>
                            <option value="and">and</option>
                            <option value="or">or</option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="y" placeholder="Y">
                    </div>
                    <div class="col">
                        <button class="btn btn-default" id="calculate">Calculate</button>
                    </div>
                    <div class="col">
                        <div id='result' class="alert alert-warning">Result</div>
                    </div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/calculator.js') }}"></script>
{% endblock %}